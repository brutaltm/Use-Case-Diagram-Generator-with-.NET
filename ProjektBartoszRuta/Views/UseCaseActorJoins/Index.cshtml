@model IEnumerable<ProjektBartoszRuta.Models.UseCaseActorJoin>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ActorID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UseCaseID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
